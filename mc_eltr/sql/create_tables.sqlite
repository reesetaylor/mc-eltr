CREATE TABLE blocks(
    block PRIMARY KEY,
    type,
    area,
    fname text NOT NULL
);

CREATE TABLE drops(
    rowid integer PRIMARY KEY,
    block text NOT NULL,
    item text NOT NULL,
    FOREIGN KEY (block) REFERENCES blocks(block)
);

CREATE TABLE recipes(
    rowid integer PRIMARY KEY,
    item text NOT NULL,
    needs text NOT NULL
);

CREATE TABLE assigned(
    rowid integer PRIMARY KEY,
    block text NOT NULL,
    loot text NOT NULL,
    FOREIGN KEY (block) REFERENCES blocks(block),
    FOREIGN KEY (loot) REFERENCES block(block)
);